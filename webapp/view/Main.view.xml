
<mvc:View 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" 
xmlns:core="sap.ui.core" 
xmlns:f="sap.ui.layout.form" 
xmlns:t="sap.ui.table" 
controllerName="ibm.fin.ar.controller.Main">
	
<t:Table  rows="{/empTab}" selectionMode="Single" visibleRowCount="5" rowSelectionChange="onRowSelect">
		<t:columns>
			<t:Column label="Emp ID">
				<t:template>
					<Text text="{empId}" />
				</t:template>
			</t:Column>
		</t:columns>

		<t:columns>
			<t:Column label="Emp name">
				<t:template>
					<Input value="{empName}" />
				</t:template>
			</t:Column>
		</t:columns>

		<t:columns>
			<t:Column label="Salary">
				<t:template>
					<Text text="{salary}" />
				</t:template>
			</t:Column>
		</t:columns>

		<t:columns>
			<t:Column label="Currency">
				<t:template>
					<Text text="{currency}" />
				</t:template>
			</t:Column>
		</t:columns>
		
		<t:columns>
			<t:Column label="Gender">
				<t:template>
					<Image width="36px" height="36px" src="{gender}" />
				</t:template>
			</t:Column>
		</t:columns>
		<t:columns>
			<t:Column label="Maritual Status">
				<t:template>
					<Select selectedKey="{mStatus}">
	
						<items>
							<core:Item key="m" text="married" />
							<core:Item key="s" text="single" />
						</items>
					</Select>
				</t:template>
			</t:Column>
		</t:columns>
		<t:columns>
			<t:Column label="Rating">
				<t:template>
					<RatingIndicator value="{rating}" />
				</t:template>
			</t:Column>
		</t:columns>
	</t:Table>
	
	<f:SimpleForm editable="true" id="simpleForm" >

	<f:title>
		<core:Title text="employess details"/>
	</f:title>
	<f:content>	

	
		<Label text="Emp ID" />
		<Input  id="idEmpID" value="{/empStr/empId}" enabled="{/empStr/sherlok}"/>
        <Label text="Emp Name" />	
		<Input  id="idEmpName" value="{/empStr/empName}" enabled="{/empStr/sherlok}"/>
        <Label text="Salary" />
		<Input id="idSalary" value="{=${/empStr/empName} === 'hello'? 5000:${/empStr/salary}}" enabled="{/empStr/sherlok}" />
        <Label text="Currency" />
		<Input id="idCurr"  enabled="{/empStr/sherlok}"/>
		<Button text="Click Me" press="onMagic"/>
		<Switch id="idSwitch" change="onChange"/>
	</f:content>
	</f:SimpleForm>
</mvc:View >
