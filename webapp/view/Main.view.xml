
<mvc:View 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" 
xmlns:core="sap.ui.core" 
xmlns:f="sap.ui.layout.form" 
controllerName="ibm.fin.ar.controller.Main">
	<f:SimpleForm editable="true" id="simpleForm" >

	<f:title>
		<core:Title text="employess details"/>
	</f:title>
	<f:content>	

	
		<Label text="Emp ID" />
		<Input  id="idEmpID" value="{/empStr/empId}" enabled="{/empStr/sherlok}"/>
        <Label text="Emp Name" />	
		<Input  id="idEmpName" value="{/empStr/empName}" enabled="{/empStr/sherlok}"/>
        <Label text="Salary" />
		<Input id="idSalary" value="{=${/empStr/empName} === 'hello'? 5000:0}"  enabled="{/empStr/sherlok}"/>
        <Label text="Currency" />
		<Input id="idCurr"  enabled="{/empStr/sherlok}"/>
		<Button text="Click Me" press="onMagic"/>
		<Switch id="idSwitch" change="onChange"/>
	</f:content>
	</f:SimpleForm>
</mvc:View>
						
	